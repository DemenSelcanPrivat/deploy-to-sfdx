<% include ../partials/head %>

<main class="slds-card">
	<div>
		Your email address will be used in your new org.  It's not stored anywhere else.
	</div>
	<div class="slds-form slfd-form_stacked slds-m-top--large">
		<div class="slds-form-element">
			<label class="slds-form-element__label" for="input-unique-id">Email</label>
			<div class="slds-form-element__control">
				<input type="email" id="email" class="slds-input" />
			</div>
		</div>
		<button class="slds-button slds-button_brand slds-m-top_small" onclick="launch()">Go</button>
		<div class="slds-hide" id="template"><%= template %></div>
	</div>
</main>

<script>
	// put the email address from the field into the button link
	function launch(){
		const template = document.getElementById('template').innerText;
		const email = document.getElementById('email').value;
		const url = '/launch?template=' + template + '&email=' + email;
		window.location.assign(url);
	}
</script>

